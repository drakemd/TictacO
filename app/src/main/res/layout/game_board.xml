<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="state"
            type="edu.upi.cs.drake.tictaco.model.Board"/>
    </data>

<android.support.v7.widget.GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:columnCount="3"
    app:rowCount="3"
    tools:showIn="@layout/activity_game">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cell_00"
        android:layout_width="0dp"
        android:background="@drawable/cell_00"
        android:gravity="center"
        android:textSize="@dimen/game_text_size"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="0"
        app:layout_rowWeight="1"
        android:text="@{state.cell00}"
        android:textColor="@color/colorTitle"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cell_10"
        android:layout_width="0dp"
        android:background="@drawable/cell_10"
        android:gravity="center"
        android:textSize="@dimen/game_text_size"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="0"
        app:layout_rowWeight="1"
        android:text="@{state.cell10}"
        android:textColor="@color/colorTitle"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cell_20"
        android:layout_width="0dp"
        android:background="@drawable/cell_20"
        android:gravity="center"
        android:textSize="@dimen/game_text_size"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="0"
        app:layout_rowWeight="1"
        android:text="@{state.cell20}"
        android:textColor="@color/colorTitle"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cell_01"
        android:layout_width="0dp"
        android:background="@drawable/cell_01"
        android:gravity="center"
        android:textSize="@dimen/game_text_size"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1"
        android:text="@{state.cell01}"
        android:textColor="@color/colorTitle"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cell_11"
        android:layout_width="0dp"
        android:background="@drawable/cell_11"
        android:gravity="center"
        android:textSize="@dimen/game_text_size"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1"
        android:text="@{state.cell11}"
        android:textColor="@color/colorTitle"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cell_21"
        android:layout_width="0dp"
        android:background="@drawable/cell_21"
        android:gravity="center"
        android:textSize="@dimen/game_text_size"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1"
        android:text="@{state.cell21}"
        android:textColor="@color/colorTitle"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cell_02"
        android:layout_width="0dp"
        android:background="@drawable/cell_02"
        android:gravity="center"
        android:textSize="@dimen/game_text_size"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1"
        android:text="@{state.cell02}"
        android:textColor="@color/colorTitle"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cell_12"
        android:layout_width="0dp"
        android:background="@drawable/cell_12"
        android:gravity="center"
        android:textSize="@dimen/game_text_size"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1"
        android:text="@{state.cell12}"
        android:textColor="@color/colorTitle"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cell_22"
        android:layout_width="0dp"
        android:background="@drawable/cell_22"
        android:gravity="center"
        android:textSize="@dimen/game_text_size"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1"
        android:text="@{state.cell22}"
        android:textColor="@color/colorTitle"
        android:textStyle="bold"/>
</android.support.v7.widget.GridLayout>
</layout>